@model ML.Producto

@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <h2>Productos</h2>
            <p>Agrega, modifica o elimina un producto.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 col-md-offset-10 text-right">
            @Html.ActionLink("+ Agregar producto", "Form", "Producto", new { @class = "btn btn-primary" })
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-condensed table-hover">
                <thead>
                    <tr>
                        <th class="text-center">Editar</th>
                        <th class="hidden">Id</th>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Marca</th>
                        <th class="text-center">Costo</th>
                        <th class="text-center">Precio de venta</th>
                        <th class="text-center">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Producto cliente in Model.Productos)
                    {
                    <tr>
                        <td class="text-center">
                            <a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form","Producto", new { idProducto = cliente.IdProducto })"></a>
                        </td>
                        <td class="hidden">@cliente.IdProducto</td>
                        <td class="text-center">@cliente.Nombre</td>
                        <td class="text-center">@cliente.Marca</td>
                        <td class="text-center">$ @cliente.Costo</td>
                        <td class="text-center">$ @cliente.PrecioVenta</td>
                        <td class="text-center">
                            <a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Producto", new { idProducto = cliente.IdProducto})"></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

